package ventana;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Toolkit;

import javax.swing.JFrame;

public class Ventana extends JFrame {

	public Ventana() {
		Toolkit miSistema = Toolkit.getDefaultToolkit();
		Image logo = miSistema.getImage("at least you tried.jpg")
			//tamaño de la ventana
		//this.setSize(400, 400);
			//localizacion de un punto en la pantalla
		//this.setLocation(440,250);
			//union de setSize y setLocation
		this.setBounds(400,400,200,200);
			//tamaño minimo de la pantalla
		this.setMinimumSize(new Dimension(200,200));
		this.setResizable(false);
		this.setTitle("Hola mundo");
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		this.getContentPane().setBackground(Color.ORANGE);
	}

	public static void main(String[] args) {

		Ventana ventana = new Ventana();
		ventana.setVisible(true);
	}

}
